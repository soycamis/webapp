extends layout

block stylesheets
    if locals.dev == 'production'
        link(rel="stylesheet", href="css/app.css")
    else
        link(rel="stylesheet", href="app/assets/css/app.css")

block main
    div(id="map")
    header
        h1(class="brand") Webapp
        section(class="user_bar")
            button(class="btn", id="loginBtn") Iniciar sesión
            button(class="btn", id="registerBtn") Registro

            img(src="", class="avatar")
            |  Nombre de usuario · 
            a(href="/salir") Cerrar sesión

    section(id="")
        form(class="login_form", id="loginForm")
            input(type="email", name="email", placeholder="Email")
            input(type="password", name="pass", placeholder="Contraseña")
            input(type="submit", value="Entrar")

        form(class="register_form", id="registerForm")
            input(type="text", name="name", placeholder="Nombre")
            input(type="email", name="email", placeholder="Email")
            input(type="password", name="pass", placeholder="Contraseña")
            input(type="password", name="pass2", placeholder="Repetir contraseña")
            input(type="submit", value="Registro")

    section(id="dashboard")
        form(class="search_form")
            input(type="search", placeholder="Buscar")

        div(class="places_list", id="places")
            ul
                //- each place in places
                li(class="item")
                    a(href="")
                        figure(class="thumb")
                            img(src="")
                        h2 Nombre del lugar
                        span Ciudad, País
                        span Categoría

block javascripts
    if locals.dev == 'production'
        script(src="js/app.js")
    else
        script(src="vendor/requirejs/require.js", data-main="js/app/main")